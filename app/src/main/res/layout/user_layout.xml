<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/sex"
        android:textSize="@dimen/text_size_user" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_gender_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_gender_male"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender_male" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_gender_female"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender_female" />
    </com.google.android.material.chip.ChipGroup>


    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/age"
        android:textSize="@dimen/text_size_user" />


    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_age_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_age_19_25"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age_19_25" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_age_25_35"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age_25_35" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_age_35_45"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age_35_45" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_age_45_55"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age_45_55" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_age_55"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age_55" />
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/level"
        android:textSize="@dimen/text_size_user" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_level_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_level_low"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/level_low" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_level_middle"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/level_middle" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_level_high"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/level_high" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_age_excellent"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/level_excellent" />

    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/day"
        android:textSize="@dimen/text_size_user" />

    <TextView
        android:id="@+id/day_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/day_description"
        android:textSize="15sp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_day_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_day_su"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day_su" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_day_mo"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day_mo" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_day_to"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day_to" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_day_we"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day_we" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_day_th"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day_th" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_day_fr"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day_fr" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_day_sa"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chip_day_sa" />
    </com.google.android.material.chip.ChipGroup>
</LinearLayout>