<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/rest_name_text_view"
        style="@style/title_text_view_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rest_name_text" />

    <ImageView
        android:id="@+id/rest_image"
        style="@style/exercise_image_view_style"
        android:src="@drawable/ic_timer_160"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/rest_count_text_view"
        style="@style/text_view_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint_for_steps" />

    <TextView
        android:id="@+id/rest_type_text_view"
        style="@style/text_view_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time"
        android:textSize="@dimen/exercise_big_text_size" />

</LinearLayout>