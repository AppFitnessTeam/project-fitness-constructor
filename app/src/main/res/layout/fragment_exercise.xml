<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/exercise_layout"
        layout="@layout/exercise_layout" />

    <include
        android:id="@+id/rest_layout"
        layout="@layout/rest_layout"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/button_skip"
        android:layout_width="@dimen/radius_button_h"
        android:layout_height="@dimen/radius_button_w"
        android:layout_margin="21dp"
        android:fontFamily="@font/roboto"
        android:text="@string/skip_workout"
        android:textSize="@dimen/text_size_roboto_med"
        app:layout_constraintEnd_toStartOf="@+id/button_next"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercise_layout" />

    <Button
        android:id="@+id/button_next"
        android:layout_width="@dimen/radius_button_h"
        android:layout_height="@dimen/radius_button_w"
        android:layout_margin="21dp"
        android:fontFamily="@font/roboto"
        android:text="@string/next_exercise"
        android:textSize="@dimen/text_size_roboto_med"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_skip"
        app:layout_constraintTop_toBottomOf="@+id/exercise_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>

