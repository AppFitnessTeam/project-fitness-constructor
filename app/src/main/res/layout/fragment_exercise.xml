<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:animateLayoutChanges="true"
        android:background="@android:color/white"
        android:clickable="false">


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/leading_image"
                android:layout_width="@dimen/ic_image_size"
                android:layout_height="@dimen/ic_image_size"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_arrow_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="160dp"
                android:layout_marginBottom="18dp"
                android:fontFamily="@font/roboto"
                android:text="@string/excercise_name"
                android:textColor="@color/workout_list_top_text"
                android:textSize="@dimen/top_bar_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/top_bar_height">

        <ImageView
            android:id="@+id/exercise_image"
            android:layout_width="@dimen/exercise_image_width"
            android:layout_height="@dimen/exercise_image_height"
            android:layout_marginTop="45dp"
            android:src="@drawable/ic_exercise_image"
            app:layout_constraintBottom_toTopOf="@+id/text_view_quantity_steps"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_quantity_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="219dp"
            android:fontFamily="@font/roboto"
            android:text="25"
            android:textColor="@color/workout_list_top_text"
            android:textSize="@dimen/exercise_big_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="262dp"
            android:fontFamily="@font/roboto"
            android:text="@string/steps"
            android:textColor="@color/workout_list_top_text"
            android:textSize="@dimen/exercise_big_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edit_text_qty_steps"
            android:layout_width="@dimen/edit_text_width"
            android:layout_height="@dimen/edit_test_height"
            android:layout_marginTop="14dp"
            android:background="@xml/rounded_border_edittext"
            android:ems="10"
            android:inputType="textPersonName|numberDecimal"
            android:text="25"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_steps" />

        <TextView
            android:id="@+id/text_view_enter_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/roboto"
            android:text="@string/enter_steps_you_ve_done"
            android:textColor="@color/workout_list_step_small_text"
            android:textSize="@dimen/exercise_small_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_qty_steps" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="@dimen/radius_button_h"
            android:layout_height="@dimen/radius_button_w"
            android:layout_margin="21dp"
            android:background="@xml/button_corner_radius"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/skip_workout"
            android:textSize="@dimen/text_size_roboto_med"
            app:layout_constraintEnd_toStartOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_enter_steps" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="@dimen/radius_button_h"
            android:layout_height="@dimen/radius_button_w"
            android:layout_margin="21dp"
            android:background="@xml/button_corner_radius_filled_by_color"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/next_exercise"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_roboto_med"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/text_view_enter_steps" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>

